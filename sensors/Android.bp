cc_binary {
    name: "android.hardware.sensors@2.0-service-multihal.MT6785",
    defaults: [
        "hidl_defaults",
    ],
    vendor: true,
    relative_install_path: "hw",
    srcs: [
        "HalProxy.cpp",
        "HalProxyCallback.cpp",
        "service.cpp",
    ],
    init_rc: ["android.hardware.sensors@2.0-service-multihal.MT6785.rc"],
    vintf_fragments: ["android.hardware.sensors@2.0-multihal.MT6785.xml"],
    header_libs: [
        "android.hardware.sensors@2.X-multihal.header",
        "android.hardware.sensors@2.X-shared-utils",
    ],
    shared_libs: [
        "android.hardware.sensors@2.0",
        "android.hardware.sensors@2.0-ScopedWakelock",
        "android.hardware.sensors@2.1",
        "libbase",
        "libcutils",
        "libfmq",
        "libhidlbase",
        "liblog",
        "libpower",
        "libutils",
    ],
    static_libs: [
        "android.hardware.sensors@1.0-convert",
    ],
}

cc_library_shared {
    name: "sensors.oplus_virtual",
    defaults: ["hidl_defaults"],
    srcs: [
        "oplus_virtual_sensors.cpp",
    ],
    shared_libs: [
        "libcutils",
        "liblog",
        "libutils",
    ],
    header_libs: [
        "libhardware_headers",
        "generated_kernel_headers",
    ],
    vendor: true,
}

cc_library_shared {
    name: "sensors.als_wrapper",
    defaults: ["hidl_defaults"],
    srcs: [
        "AlsCorrection.cpp",
        "als_wrapper.cpp",
    ],
    shared_libs: [
        "libbinder",
        "libbinder_ndk",
        "libcutils",
        "libhardware",
        "liblog",
        "libutils",
        "vendor.lineage.oplus_als-V1-ndk",
    ],
    vendor: true,
}
